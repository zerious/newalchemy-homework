{
  "name": "newalchemy-homework",
  "version": "1.0.0",
  "description": "Simple Storage Server",
  "author": "Sam Eubank <sameubank@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "PORT=8888 NODE_ENV=dev nodemon server/server.js",
    "build": "nuxt build",
    "start": "PORT=8888 NODE_ENV=production node server/server.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "yarn run lint"
  },
  "dependencies": {
    "nuxt": "1.4.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-vue": "4.4.0",
    "nodemon": "1.17.3",
    "pug": "2.0.3",
    "pug-loader": "2.4.0",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended",
      "standard"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 1000,
          "comments": 1000
        }
      ],
      "max-params": [
        "error",
        {
          "max": 3
        }
      ]
    }
  },
  "eslintIgnore": [
    "/coverage",
    "/data",
    "/dist",
    "/static",
    "/node_modules"
  ]
}
